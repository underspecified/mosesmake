#!/bin/bash

# UTF8 mecab
mecab8 () {
    code=`mecab -D | grep charset:` 
    case "$code" in
    *utf-8*)
		/usr/bin/mecab $*
    ;;
    *UTF-8*)
		/usr/bin/mecab $*
    ;;
    *euc*)
    	euc_io /usr/bin/mecab $*	   
    ;;
    *EUC*)
    	euc_io /usr/bin/mecab $*	   
    ;;
    *)
		echo "Uh oh!"
		exit 1
    ;;
    esac
}

mecab8 $*
